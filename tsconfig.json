{
  "compilerOptions": {
    "declaration": true,
    "module": "ES2020",
    "target": "ES2018",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test/**/*.*",
    "./jest.config.cjs",
    "./dist",
    "./node_modules"
  ]
}

{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "./jest.config.cjs",
    "./dist",
    "./node_modules"
  ]
}
